{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES6", "dom", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES6",
    "types": ["jest"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": ["src/**/__tests__"]
}
